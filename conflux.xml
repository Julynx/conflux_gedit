<?xml version="1.0" encoding="UTF-8"?>
<!--
 Author: Julio Cabria
 Completed: May 7th, 2020
 
 Description: This color palette was inspired by the crimson editor
 gedit theme by Dan VanMullen. All 8 colors are equally distributed 
 among the hue wheel, illustrating the armonious consonance of nature 
 and programming.
-->

  <style-scheme id="conflux" _name="Conflux" version="1.0">
  <author>Julio Cabria</author>
  <_description>Color palette inspired by the crimson editor
  gedit theme by Dan VanMullen.</_description>

  <color name="amber"                value="#ccaa43"/>
  <color name="cactus"               value="#88cc43"/>
  <color name="mint"                 value="#43cc65"/>
  <color name="ice"                  value="#43cccc"/>
  <color name="indigo"               value="#4365cc"/>
  <color name="mauve"                value="#8843cc"/>
  <color name="amaranth"             value="#cc43aa"/>
  <color name="crimson"              value="#cc4343"/>

  <color name="black"                value="#2C2C2C"/>
  <color name="grey"                 value="#444444"/>
  <color name="white"                value="#FFFFFF"/>	

<!--GUI styles-->
<!--Mint, Indigo, Crimson & Mauve -->

  <style name="text"                        foreground="white" background="black"/>
  <style name="selection"                   background="mint"/>
  <style name="selection-unfocused"         foreground="black" background="mint"/>
  <style name="cursor"                      foreground="mint"/>
  <style name="secondary-cursor"            foreground="mint"/>
  <style name="current-line"                background="indigo"/>
  <style name="line-numbers"                foreground="white" background="mauve"/>
  <style name="bracket-match"               foreground="mint" background="black" bold="true"/>
  <style name="bracket-mismatch"            foreground="crimson" background="black" bold="true"/>
  <style name="search-match"                foreground="black" background="indigo"/>

<!--Default styles-->
<!--Ice, Amber, Amaranth & Cactus-->

  <style name="def:keyword"                 foreground="amber" bold="false"/>
  <style name="def:statement"               foreground="gray"/>
  <style name="def:function"                foreground="white"/>
  <style name="def:preprocessor"            foreground="amaranth" bold="false"/>
  <style name="def:type"                    foreground="ice"/>
  <style name="def:character"               foreground="white"/>
  <style name="def:comment"                 foreground="cactus" italic="true"/>
  <style name="def:number"                  foreground="white"/>
  <style name="def:decim Ital"              foreground="white"/>
  <style name="def:base-n-integer"          foreground="white"/>
  <style name="def:floating-point"          foreground="white"/>
  <style name="def:complex"                 foreground="white"/>
  <style name="def:string"                  foreground="amaranth"/>
  <style name="def:net-address-in-comment"  foreground="white" italic="true" underline="true"/>
  <style name="def:note"                    foreground="white" background="grey" bold="true"/>
  <style name="def:error"                   background="crimson" bold="false"/>
  <style name="def:escape"                  foreground="white"/>
  <style name="def:shebang"                 foreground="white" bold="false"/>
  <style name="def:doc-comment-element"     italic="true"/>
  <style name="def:identifier"              foreground="amber" bold="false"/>
  <style name="def:inline-identifier"       foreground="amaranth" bold="false"/>
  <style name="def:builtin"                 porforeground="white" bold="false"/>
  <style name="def:specials"                foreground="white" background="amaranth"/>
  <style name="def:variable"                foreground="amber"/>
  <style name="def:boolean"                 foreground="ice" bold="true"/>
  <style name="def:constant"                foreground="white"/>
  <style name="def:special-constant"        foreground="white" bold="true"/>
  <style name="def:special-character"       foreground="white" bold="true"/>  
  <style name="def:background"              foreground="black"/>
  <style name="diff:added-line"             foreground="white"/>
  <style name="diff:removed-line"           foreground="white"/>
  <style name="diff:changed-line"           foreground="white"/>
  <style name="diff:special-case"           use-style="def:string"/>
  <style name="diff:location"               use-style="def:keyword"/>
  
               
</style-scheme>
